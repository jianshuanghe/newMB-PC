<script src="./../../js/jquery-1.11.3.min.js"></script>
<script src="../../src/login/js/drag.js" type="text/javascript"></script>
<script>
  $("#phone").blur(function(){
     var phone = $("#phone").val();
     if(!(/^1[3456789]\d{9}$/.test(phone))){
         $("#phone-error").css("display","block");
     }else{
         $("#phone-error").css("display","none");
     }
  });
  $('#drag').drag();
  $("button[name='button']").click(function(event) {
      //这里写发送验证码的代码
      var time = 60;
      settime($(this));
      function settime(obj){
          if (time==0) {
              $(obj).attr('disabled', false);
              $(obj).html("获取验证码");
              time = 60;
              return;
          } else{
              $(obj).attr('disabled', true);
              $(obj).html(time+"S重新获取");
              time--;
              //调用发短信接口
          }
          setTimeout(function() {
              settime(obj)
          },1000)
      }
      $.ajax({
          type: "POST",
          dataType:'json',
          url: "http://192.168.131.204:8090/yunxin-rest-api-sso/phoneSms",
          xhrFields: {
              withCredentials: true,
              useDefaultXhrHeader: false
          },
          data:  {
              phone:$("#phone").val(),
              businessName:"1",
              portal:"ruhexiu"
          },
          crossDomain: true,
          success: function (data) {
              alert('success');

          },
          error: function (err) {
              alert('failure');
              // handle your error logic here
          }
      });

  });
  //验证验证码>>>登陆跳转
  $("#loginBtnCode").click(function(){
      /*var dataJson ={"phone":$("#phone").val(),"phoneCode":$("#phoneCode").val(),"businessName":"1","portal":"ruhexiu"}*/
      var dataJson ={"phone":$("#phone").val(),"phoneCode":$("#phoneCode").val(),"loginType":"0"}
      jQuery.ajax({
          url : "http://zhaojie0001.mynatapp.cc/rest-rp/mbUser/login",
          type : 'post',
          data : JSON.stringify(dataJson),
          contentType : 'application/json;charset=UTF-8',
          success : function(data) {
              alert(JSON.stringify(data))
              if(data.ret == '200'){
                  window.localStorage.setItem('userId',data.content.user.id);
                  window.location.href="../projectB/homepage.html";
              }else{
                  $("#verificat-error").css("display","none");
                  console.log(data.content);
              }
          }
      });

  });
</script>

