<script>
    $(function () {
        /*公共部分
         * header 头部
         * header 底部
         */
        $("#header").load("./../../src/common/pages/header/header.html");

    });
    // 产品信息 公司资讯 产品售后 公司介绍 切换
    $(".Navigation-but").click(function(){
        $(this).addClass('weight').siblings().removeClass('weight');
        console.log($(this).index())
    })
    $(".Details-Navigationswitch-hea").click(function(){
        $(this).addClass('newhea').siblings().removeClass('newhea');
        console.log($(this).index())
    })
    var num='0';
    $(".many-span").click(function(){
        if(num=='0'){
            $(".class_img").attr("src", "../../images/img/Triangle-green.png");
            $(this).css('color','#02C2A2');
            $(".Details-Navigationswitch-surplus").css('display','block');
            $(".Mask").css('display','block');
            num='1';
        }else if(num=='1'){
            $(".class_img").attr("src", "../../images/img/Triangle-black.png");
            $(this).css('color','#2E2E30');
            $(".Details-Navigationswitch-surplus").css('display','none');
            $(".Mask").css('display','none');
            num='0';
        }
    })
    $(".Mask").click(function(){
        $(".Mask").css('display','none');
        $(".Details-Navigationswitch-surplus").css('display','none');
        $(".class_img").attr("src", "../../images/img/Triangle-black.png");
        $(".many-span").css('color','#2E2E30');
    });
    $(".Navigationswitch-surplus-xuan").mouseenter(function(){
        
        $(this).addClass('xiala')
    })
    $(".Navigationswitch-surplus-xuan").mouseleave(function () {
        $(this).removeClass('xiala');
    });
</script>